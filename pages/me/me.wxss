.me-image-layout{
  width: 100%;
  height: 100px;
  background-color: #FFFFFF;
  /* flex布局 */
  display: flex;
  /* 竖着排列或横向排列 */
  flex-direction: column;
  /* 项目在交叉轴的对齐方式 */
  align-items: center;
  /* 项目在主轴上的对齐方式 */
  justify-content: center;
  box-sizing: border-box;
}
.me-image-head{
  height: 50px;
  width: 50px;
  border-radius:50px; 
}
.me-image-text{
  height: 10px;
  width: 10px;
  padding-left: 10px
}
.me-text-number{
  text-align: center;
  margin-top: 10px;
  color: blue;
}
.me-text-layout{
  padding-top: 20px
}
.me-text{
  text-align: left;
  padding-left: 10px;
  color: black
}
